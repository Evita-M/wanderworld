{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "src/",
    "paths": {
      "@/app/*": ["app/*"],
      "@/api/*": ["api/*"],
      "@/components/*": ["components/*"],
      "@/modules/*": ["modules/*"],
      "@/lib/*": ["lib/*"],
      "@/providers/*": ["providers/*"],
      "@/services/*": ["services/*"],
      "@/styles/*": ["styles/*"],
      "@/types/*": ["types/*"],
      "@/utils/*": ["utils/*"],
      "@/redux/*": ["redux/*"],
      "@/config/*": ["config/*"],
      "@/ui/*": ["ui/*"],
      "@/views/*": ["views/*"],
      "@/shared/*": ["shared/*"],
      "@/features/*": ["features/*"],
      "@/entities/*": ["entities/*"],
      "@/routes/*": ["routes/*"]
    },
    "types": ["react"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
